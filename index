<script>
	var int = Math.floor((Math.random() * 100) + 1)
	//document.write(int)
	function clc (numu) {
		var uint = document.getElementById("numu")
		var nint = uint.value;
		
		if (int == nint) {
			alert ("پاسخ شما درست است")
					window.location.reload()
			}
		else if (nint < int) {
			alerter.innerHTML = "برو بالاتر";
			}
		else {
			alerter.innerHTML = "بیا پایین";
			}
	}
</script>

